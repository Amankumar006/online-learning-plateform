rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin role
    function isAdmin() {
      // Check if the user document exists and the role is 'admin'
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read/write their own data, admins can read any user data.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Anyone authenticated can read lessons. Only admins can write.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Anyone authenticated can read exercises. Only admins can write.
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Rules for user-specific exercise responses
    match /exerciseResponses/{responseId} {
      // Allow a user to get their own response document directly. Admins can get any.
      allow get: if request.auth.uid == resource.data.userId || isAdmin();

      // Allow a user to query for responses. The client code MUST enforce that
      // users only query for their own responses using a where() clause.
      allow list: if request.auth != null;

      // Allow a user to create a response for themselves.
      allow create: if request.auth.uid == request.resource.data.userId;

      // Allow a user to update or delete their own response. Admins can manage any.
      allow update, delete: if request.auth.uid == resource.data.userId || isAdmin();
    }
  }
}
