
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
        return request.auth != null;
    }
    
    function isAdmin() {
        return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Checks if the incoming data only contains the fields specified in the list
    function onlyHas(fields) {
      return request.resource.data.keys().hasOnly(fields);
    }

    // Checks if an update operation only modifies the specified fields.
    // It ensures no other fields are added, changed, or removed.
    function onlyModifies(fields) {
        let allKeys = request.resource.data.keys().concat(resource.data.keys()).toSet();
        let modifiedKeys = request.resource.data.diff(resource.data).affectedKeys();
        // Every key that was modified must be in the allowed list of fields
        return modifiedKeys.hasOnly(fields);
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth() && isOwner(userId);
      allow update: if isAdmin() || (isAuth() && isOwner(userId));
    }
    
    match /lessons/{lessonId} {
      allow read: if isAuth();
      allow create, delete: if isAdmin();
      
      // Allow admins to update anything.
      // Allow authenticated users to update ONLY if they are just changing the 'sections' field.
      // This is to allow caching the audioUrl from the client.
      allow update: if isAdmin() || (isAuth() && onlyModifies(['sections']));
    }
    
    match /exercises/{exerciseId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
    }

    match /exerciseResponses/{responseId} {
        allow read, create, update: if isAuth() && isOwner(request.resource.data.userId);
        allow delete: if isAdmin();
    }
    
    match /lessonRequests/{requestId} {
      allow create: if isAuth();
      allow read, update, delete: if isAdmin();
    }
    
    match /announcements/{announcementId} {
        allow read: if isAuth();
        allow create: if isAdmin();
    }
    
    match /emailQueue/{emailId} {
      // This collection is write-only for admins from the backend.
      // The "Trigger Email" extension needs read/delete access.
      allow read, delete: if false; 
      allow create: if isAdmin();
    }
  }
}
