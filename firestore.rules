
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Function to check if a user is an admin. Reduces repetitive get() calls.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read/write their own profile. Admins can read/update any user profile.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
    }

    // Lessons are public to read for any authenticated user.
    // Only admins can create, update, or delete lessons.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write, update, delete: if isAdmin();
    }

    // Exercises: Admins have full access. Users can read public exercises and manage their own custom ones.
    match /exercises/{exerciseId} {
      allow read: if request.auth != null && (
        resource.data.isCustom == false || 
        (resource.data.isCustom == true && resource.data.userId == request.auth.uid) ||
        isAdmin()
      );
      allow create: if request.auth != null && (
        (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid) ||
        isAdmin()
      );
      allow update, delete: if request.auth != null && (
        (resource.data.isCustom == true && resource.data.userId == request.auth.uid) ||
        isAdmin()
      );
    }
    
    // Users can create/read/update their own exercise responses.
    match /exerciseResponses/{responseId} {
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Admins can read/write announcements. Users can read them.
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        write: if isAdmin();
    }
    
    // Admins can manage all requests. Users can only create their own.
    match /lessonRequests/{requestId} {
      allow read, write: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // No client-side access to the email queue.
    match /emailQueue/{emailId} {
      allow read, write: if false;
    }
  }
}
