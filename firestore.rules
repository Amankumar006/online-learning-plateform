
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isUser(userId);
    }

    // Lessons collection (read-only for clients)
    match /lessons/{lessonId} {
      allow get, list: if isSignedIn();
    }

    // Exercises collection (read-only for clients)
    match /exercises/{exerciseId} {
      allow get, list: if isSignedIn();
    }
    
    // Announcements (read-only for clients)
    match /announcements/{announcementId} {
        allow get, list: if isSignedIn();
    }
    
    // Lesson Requests
    match /lessonRequests/{requestId} {
      // Users can create their own requests
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can't see other users' requests
      allow read, update, delete: if false; 
    }

    // Exercise Responses
    match /exerciseResponses/{responseId} {
        // A user can read/write their own responses. The doc ID is formatted as {userId}_{exerciseId}
        allow read, write: if isSignedIn() && request.auth.uid == responseId.split('_')[0];
    }
    
    // Study Rooms
    match /studyRooms/{roomId} {
      // Any signed-in user can create a room
      allow create: if isSignedIn();

      // Any signed-in user can read a room's details (to see public rooms or join private ones via link)
      allow get: if isSignedIn();
      
      // Allow listing of public rooms, or rooms a user is part of
      allow list: if isSignedIn() && (resource.data.isPublic == true || request.auth.uid in resource.data.participantIds);

      // Only the owner can update the room state (e.g., whiteboard, ending session)
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      
      // No one can delete a room from the client
      allow delete: if false;

      // Rules for the participants subcollection
      match /participants/{userId} {
        // Any signed-in user can join a room (create their participant doc) or leave it
        allow write: if isSignedIn() && request.auth.uid == userId;
        // Any signed-in user can see who is in the room
        allow read: if isSignedIn();
      }

      // Rules for the messages subcollection
      match /messages/{messageId} {
        // Any signed-in user can read messages
        allow read: if isSignedIn();
        // A signed-in user can only send messages as themselves (or as the buddy AI for server-side responses)
        allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || request.resource.data.userId == 'buddy-ai');
      }

      // Rules for the resources subcollection
      match /resources/{resourceId} {
          allow read: if isSignedIn();
          // Any authenticated user can add a resource
          allow create: if isSignedIn();
          // Only the user who added it or the room owner can delete it
          allow delete: if isSignedIn() && (resource.data.addedByUserId == request.auth.uid || get(/databases/$(database)/documents/studyRooms/$(roomId)).data.ownerId == request.auth.uid);
      }
    }
  }
}
