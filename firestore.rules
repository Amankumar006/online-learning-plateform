
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      // Note: This relies on the rules for /users/{userId} allowing an admin to read their own document.
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // An authenticated user can read their own profile. Admins can read any profile.
      allow get: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();
      
      // Admins can list all users.
      allow list: if isAdmin();

      // A user can create their own student profile. Admins can also create users.
      allow create: if (isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'student') || isAdmin();
      
      // An authenticated user can update their own profile, but cannot change their role.
      // Admins can update any profile, including the role.
      allow update: if (isAuthenticated() && request.auth.uid == userId && !("role" in request.resource.data)) || isAdmin();
      
      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    // Lessons collection
    match /lessons/{lessonId} {
      // Any authenticated user can read lessons
      allow read: if isAuthenticated();
      // Only admins can write/delete lessons
      allow write, delete: if isAdmin();
    }

    // Exercises collection
    match /exercises/{exerciseId} {
      // Any authenticated user can read exercises
      allow read: if isAuthenticated();
      // Only admins can create/update/delete official exercises
      allow write, delete: if isAdmin() && !request.resource.data.isCustom;
      // Users can create/delete their own custom exercises
      allow create, delete: if isAuthenticated() && request.resource.data.isCustom == true && request.auth.uid == request.resource.data.userId;
    }

    // Exercise Responses collection
    match /exerciseResponses/{responseId} {
        // A user can create/read/update their own responses.
        // The document ID must be in the format 'userId_exerciseId'
        allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId && responseId == request.auth.uid + '_' + resource.data.exerciseId;
    }

    // Lesson Requests collection
    match /lessonRequests/{requestId} {
        // Any authenticated user can create a request
        allow create: if isAuthenticated();
        // Only admins can read, update, or delete requests
        allow read, update, delete: if isAdmin();
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
        // Any authenticated user can read announcements
        allow read: if isAuthenticated();
        // Only admins can create/update/delete announcements
        allow write: if isAdmin();
    }
  }
}
