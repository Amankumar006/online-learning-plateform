
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow user to update their own name, progress, and timestamps.
      // Allow admin to update any user's role.
      allow update: if request.auth != null && (
        (request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'lastLessonRequestAt', 'lastCheckedAnnouncementsAt', 'progress'])) ||
        (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))
      );
    }

    // Lessons collection
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Exercises collection
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
      allow create: if 
        (isAdmin() && request.resource.data.isCustom == false) ||
        (request.auth.uid == request.resource.data.userId && request.resource.data.isCustom == true);
      allow update: if isAdmin();
      allow delete: if
        isAdmin() ||
        (request.auth.uid == resource.data.userId && resource.data.isCustom == true);
    }
    
    // User responses to exercises
    match /exerciseResponses/{responseId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Lesson Requests collection
    match /lessonRequests/{requestId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
    }

    // Announcements collection
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
