
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is a participant in a study room
    function isParticipant(roomId) {
      return exists(/databases/$(database)/documents/studyRooms/$(roomId)/participants/$(request.auth.uid));
    }

    // Helper function to check if the user is the owner of a study room
    function isRoomOwner(roomId) {
      return get(/databases/$(database)/documents/studyRooms/$(roomId)).data.ownerId == request.auth.uid;
    }


    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow delete: if false;
    }

    // Rules for the 'lessons' collection
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Rules for the 'exercises' collection
    match /exercises/{exerciseId} {
      allow read: if request.auth != null && (isAdmin() || resource.data.isCustom == false || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && (isAdmin() || (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid));
      allow update: if isAdmin();
      allow delete: if request.auth != null && (isAdmin() || (get(/databases/$(database)/documents/exercises/$(exerciseId)).data.userId == request.auth.uid && get(/databases/$(database)/documents/exercises/$(exerciseId)).data.isCustom == true));
    }
    
    // Rules for user's responses to exercises
    match /exerciseResponses/{responseId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for system-wide announcements
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Rules for user-submitted lesson requests
    match /lessonRequests/{requestId} {
      allow read, update, delete: if isAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for the email queue used by the Trigger Email extension
    match /emailQueue/{emailId} {
      allow create: if isAdmin();
      allow read, update, delete: if false;
    }
    
    // Rules for Study Rooms
    match /studyRooms/{roomId} {
      // LIST: Allow querying for all public rooms, OR querying for private rooms where the user is the owner.
      allow list: if request.auth != null && (request.query.resource.data.isPublic == true || request.query.resource.data.ownerId == request.auth.uid);

      // GET: Allow reading a single room if it is public or if the user is a participant.
      allow get: if request.auth != null && (resource.data.isPublic == true || request.auth.uid in resource.data.participantIds);
      
      // CREATE: Any authenticated user can create a room for themselves.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      
      // UPDATE: Only the room owner can update (e.g., change state, end session).
      allow update: if request.auth != null && isRoomOwner(roomId);
      
      // DELETE: Only the owner can delete a room.
      allow delete: if request.auth != null && isRoomOwner(roomId);
        
      // --- Subcollection Rules ---
      match /participants/{userId} {
        allow read: if isParticipant(roomId);
        allow write: if request.auth.uid == userId;
        allow delete: if request.auth.uid == userId;
      }

      match /messages/{messageId} {
        allow read: if isParticipant(roomId);
        allow create: if isParticipant(roomId) && request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }

      match /resources/{resourceId} {
        allow read: if isParticipant(roomId);
        allow create: if isParticipant(roomId) && request.resource.data.addedByUserId == request.auth.uid;
        allow delete: if isRoomOwner(roomId) || get(/databases/$(database)/documents/studyRooms/$(roomId)/resources/$(resourceId)).data.addedByUserId == request.auth.uid;
        allow update: if false;
      }
    }
  }
}
