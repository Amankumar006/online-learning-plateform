
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and update their own profile information.
    // They can also create their own user document upon signup.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // All authenticated users can read lessons.
    // Writes are currently permissive and rely on client-side admin checks.
    // For production, you would lock this down further with custom claims for admins.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // For exercises, allow reading of all.
    // For custom exercises, only allow users to manage their own.
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
      
      // Allow creation if it's a non-custom exercise OR if it's a custom one and the userId matches.
      allow create: if request.auth != null && 
                     (request.resource.data.isCustom == false || 
                      (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid));
      
      // Allow update/delete if it's non-custom (for admin) OR it's the user's own custom exercise.
      allow update, delete: if request.auth != null &&
                             (get(/databases/$(database)/documents/exercises/$(exerciseId)).data.isCustom == false || 
                              get(/databases/$(database)/documents/exercises/$(exerciseId)).data.userId == request.auth.uid);
    }
    
    // Users can create, read, and update their own exercise responses.
    match /exerciseResponses/{responseId} {
      // Allow write if the user ID in the document matches the authenticated user.
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow read if the user ID in the document matches the authenticated user.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
