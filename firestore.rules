
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can be created by anyone (for signup), but can only be read/updated by themselves or an admin.
    // Roles can only be changed by an admin.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.role == 'student';
      allow update: if request.auth != null && (
          (
            request.auth.uid == userId &&
            // User can't change their own role, uid, or email
            request.resource.data.role == resource.data.role &&
            request.resource.data.uid == resource.data.uid &&
            request.resource.data.email == resource.data.email
          ) ||
          // Admins can update any user
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      // Delete should probably be restricted to admins
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Lessons can be read by any authenticated user, but only created/updated/deleted by admins.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Exercises can be read by any authenticated user.
    // Official exercises (isCustom=false) can only be written by admins.
    // Custom exercises can be created/deleted by the user who owns them.
    match /exercises/{exerciseId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
            (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid)
        );
        allow delete: if request.auth != null && (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
            (resource.data.isCustom == true && resource.data.userId == request.auth.uid)
        );
    }

    // Users can write their own exercise responses. Admins can read all.
    match /exerciseResponses/{responseId} {
        allow read: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Lesson requests can be created by any authenticated user.
    // Admins can read/update all requests. Users can only read their own.
    match /lessonRequests/{requestId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Announcements can be read by any authenticated user.
    // Announcements can only be created by admins (indirectly via function calls).
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow write: if false; // Should only be created server-side/by admins.
    }
  }
}
