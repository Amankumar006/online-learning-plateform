
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for improved readability and reuse.
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isParticipant(roomId) {
      return isAuth() && exists(/databases/$(database)/documents/studyRooms/$(roomId)/participants/$(request.auth.uid));
    }
    
    function isRoomOwner(roomId) {
        return isAuth() && get(/databases/$(database)/documents/studyRooms/$(roomId)).data.ownerId == request.auth.uid;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false; // Users should not be deleted
    }

    // Rules for 'lessons', 'announcements', and 'emailQueue' collections
    match /lessons/{lessonId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /announcements/{announcementId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /emailQueue/{emailId} {
      allow create: if isAdmin();
      allow read, update, delete: if false;
    }
    
    match /lessonRequests/{requestId} {
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAdmin();
    }

    // Rules for the 'exercises' collection
    match /exercises/{exerciseId} {
      allow get: if isAuth() && (isAdmin() || resource.data.isCustom == false || resource.data.userId == request.auth.uid);
      allow list: if isAuth(); // Allows querying for lessons, read rule will be enforced on each doc.
      allow create: if isAuth() && (isAdmin() || (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid));
      allow update: if isAdmin();
      allow delete: if isAdmin() || (isAuth() && getAfter(data()).data.userId == request.auth.uid && getAfter(data()).data.isCustom == true);
    }
    
    // Rules for user's responses to exercises
    match /exerciseResponses/{responseId} {
      allow get: if isAuth() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAuth() && (request.query.limit <= 100 && (request.query.where.userId == request.auth.uid || isAdmin()));
      allow write: if isAuth() && request.resource.data.userId == request.auth.uid;
    }

    // --- Study Rooms ---
    match /studyRooms/{roomId} {
      // GET: A user can get a specific room if it is public OR they are a participant.
      allow get: if isAuth() && (resource.data.isPublic == true || request.auth.uid in resource.data.participantIds);

      // LIST: A user can list rooms if they are querying for public rooms OR rooms they are a participant in.
      allow list: if isAuth() && (
        (request.query.where.isPublic == true) || 
        (request.auth.uid in request.query.where.participantIds)
      );

      // CREATE: A user can create a room if they set themselves as the owner and a participant.
      allow create: if isAuth() 
                    && request.resource.data.ownerId == request.auth.uid
                    && request.auth.uid in request.resource.data.participantIds;

      // UPDATE: Only the room owner can update the room (e.g., to end the session).
      allow update: if isRoomOwner(roomId);
      
      // DELETE: No one can delete a room to preserve whiteboard history.
      allow delete: if false;

      // --- Subcollections ---
      match /participants/{userId} {
        // Read: Any participant can see the list of other participants.
        allow read: if isParticipant(roomId);
        // Write: A user can only add/update/remove their own participant document.
        allow write: if isOwner(userId);
      }

      match /messages/{messageId} {
        // Read: Any participant can read messages.
        allow read: if isParticipant(roomId);
        // Create: A participant can send a message as themselves.
        allow create: if isParticipant(roomId) && request.resource.data.userId == request.auth.uid;
        // No one can update or delete messages.
        allow update, delete: if false;
      }

      match /resources/{resourceId} {
        // Read: Any participant can read the resource list.
        allow read: if isParticipant(roomId);
        // Create: Any participant can add a resource as themselves.
        allow create: if isParticipant(roomId) && request.resource.data.addedByUserId == request.auth.uid;
        // Delete: Only the room owner or the user who added the link can delete it.
        allow delete: if isRoomOwner(roomId) || get(/databases/$(database)/documents/studyRooms/$(roomId)/resources/$(resourceId)).data.addedByUserId == request.auth.uid;
        // No one can update a resource link.
        allow update: if false;
      }
    }
  }
}
