rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Lessons can be read by any authenticated user, but only written by admins
    match /lessons/{lessonId} {
      allow read: if request.auth.uid != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Exercises can be read by any authenticated user, but only written by admins
    match /exercises/{exerciseId} {
      allow read: if request.auth.uid != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Exercise responses can only be created/read/updated by the user who owns them
    match /exerciseResponses/{responseId} {
      allow read, write: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid != null;
    }
    
    // Announcements can be read by anyone, but only created by admins
    match /announcements/{announcementId} {
        allow read: if request.auth.uid != null;
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Email queue can be written to by the system (via admin actions)
    match /emailQueue/{emailId} {
        allow read, write: if false; // Should only be accessed by the Trigger Email extension
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Lesson requests can only be read by admins, but created by any authenticated user
    match /lessonRequests/{requestId} {
        allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create: if request.auth.uid != null;
    }
    
    // Study Rooms can be created, read, and written to by any authenticated user.
    // In a production app, you would add more granular control (e.g., only owner can delete).
    match /studyRooms/{roomId} {
        allow read, write: if request.auth.uid != null;
    }
  }
}
