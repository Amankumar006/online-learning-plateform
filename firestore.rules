
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for the existence of the user document and their role.
      // Use exists() to avoid errors if the document doesn't exist yet.
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // =================================
    // Users Collection
    // =================================
    match /users/{userId} {
      // Users can read their own data. Admins can read anyone's data.
      allow read: if isOwner(userId) || isAdmin();
      // Users can update their own data. Admins can update anyone's.
      allow write: if isOwner(userId) || isAdmin();
    }

    // =================================
    // Lessons Collection
    // =================================
    match /lessons/{lessonId} {
      // Any authenticated user can read lessons.
      allow read: if isAuthenticated();
      // Only admins can create/update/delete lessons.
      allow write: if isAdmin();
    }

    // =================================
    // Exercises Collection
    // =================================
    match /exercises/{exerciseId} {
      // Admins have full read/write access to all exercises.
      allow read, write: if isAdmin();

      // Read rule for non-admins (students).
      // An authenticated user can read an exercise if:
      // 1. The exercise is public (isCustom == false).
      // OR
      // 2. The exercise is custom (isCustom == true) AND the user is the owner.
      allow read: if isAuthenticated() && (
        resource.data.isCustom == false || 
        (resource.data.isCustom == true && resource.data.userId == request.auth.uid)
      );

      // Create rule for non-admins (students).
      // A user can only CREATE exercises that are marked as custom and owned by them.
      // Admin creation is covered by the admin rule above.
      allow create: if isAuthenticated() && 
                     request.resource.data.isCustom == true && 
                     request.resource.data.userId == request.auth.uid;

      // Update/Delete rule for non-admins (students).
      // A user can only UPDATE or DELETE exercises that are custom and owned by them.
      allow update, delete: if isAuthenticated() && 
                             resource.data.isCustom == true && 
                             resource.data.userId == request.auth.uid;
    }

    // =================================
    // ExerciseResponses Collection
    // =================================
    match /exerciseResponses/{responseId} {
      // A user can read their own exercise responses. Admins can read any.
      allow read: if isAdmin() || isOwner(resource.data.userId);
      // A user can create or update their own responses.
      allow write: if isOwner(request.resource.data.userId);
    }

    // =================================
    // Other Collections
    // =================================
    match /lessonRequests/{reqId} {
      // Users can create requests for themselves.
      allow create: if isOwner(request.resource.data.userId);
      // Only admins can read or act on requests.
      allow read, update: if isAdmin();
    }

    match /announcements/{annId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /emailQueue/{emailId} {
      // Only the backend (running as admin) can queue emails.
      allow create: if isAdmin();
    }
  }
}
