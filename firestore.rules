
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is a participant in a study room
    function isParticipant(roomId) {
      return exists(/databases/$(database)/documents/studyRooms/$(roomId)/participants/$(request.auth.uid));
    }
    
    // Helper function to check if the user is the owner of a study room
    function isRoomOwner(roomId) {
      return get(/databases/$(database)/documents/studyRooms/$(roomId)).data.ownerId == request.auth.uid;
    }
    
    // Helper function to check if a room is public
    function isPublicRoom(roomId) {
      return get(/databases/$(database)/documents/studyRooms/$(roomId)).data.isPublic == true;
    }


    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read any user profile. Users can only read their own.
      allow read: if request.auth.uid == userId || isAdmin();
      
      // Users can update their own profile fields.
      // Admins can update any user's profile (e.g., to change a role).
      allow update: if request.auth.uid == userId || isAdmin();
      
      // A user is created only when they sign up.
      allow create: if request.auth.uid == userId;
      
      // No one can delete user documents.
      allow delete: if false;
    }

    // Rules for the 'lessons' collection
    match /lessons/{lessonId} {
      // Any authenticated user can read lessons.
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete lessons.
      allow write: if isAdmin();
    }

    // Rules for the 'exercises' collection
    match /exercises/{exerciseId} {
      // An exercise can be read if it's a public exercise, a custom exercise belonging to the user, or if the user is an admin.
      allow read: if request.auth != null && (isAdmin() || resource.data.isCustom == false || resource.data.userId == request.auth.uid);

      // Admins can create any exercise. Users can only create exercises marked as 'custom' for themselves.
      allow create: if request.auth != null && (isAdmin() || (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid));
      
      // Only admins can update exercises.
      allow update: if isAdmin();
      
      // Admins can delete any exercise. Users can only delete their own custom exercises.
      allow delete: if request.auth != null && (isAdmin() || (get(/databases/$(database)/documents/exercises/$(exerciseId)).data.userId == request.auth.uid && get(/databases/$(database)/documents/exercises/$(exerciseId)).data.isCustom == true));
    }
    
    // Rules for user's responses to exercises
    match /exerciseResponses/{responseId} {
      // Users can read their own responses. Admins can read any response.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can only create or update their own responses.
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for system-wide announcements
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements.
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete announcements.
      allow write: if isAdmin();
    }

    // Rules for user-submitted lesson requests
    match /lessonRequests/{requestId} {
      // Only admins can read, update, or delete lesson requests.
      allow read, update, delete: if isAdmin();
      
      // Users can create a request for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for the email queue used by the Trigger Email extension
    match /emailQueue/{emailId} {
      // Only admins (through the backend) can add emails to the queue.
      allow create: if isAdmin();
      
      // No one should be able to read, update, or delete from the queue directly.
      allow read, update, delete: if false;
    }
    
    // Rules for Study Rooms
    match /studyRooms/{roomId} {
        // List: Allow listing public rooms and rooms where the user is a participant.
        // This rule is critical for the main study room page to load correctly.
        allow list: if request.auth != null && 
                    (request.query.where.isPublic == true || 
                     request.query.where.participantIds.includes(request.auth.uid));
        
        // Get: Allow reading a specific room if it's public or if the user is a participant.
        allow get: if request.auth != null && (isPublicRoom(roomId) || isParticipant(roomId));

        // Create: Any authenticated user can create a room.
        allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
        
        // Update: Only participants can update the room state (whiteboard).
        // Only the owner can end the session (update the status).
        allow update: if request.auth != null && isParticipant(roomId) &&
                       (request.resource.data.roomState != resource.data.roomState || // Allow changing roomState
                        (request.resource.data.status != resource.data.status && isRoomOwner(roomId))); // Allow owner to change status
        
        // --- Subcollection Rules ---
        match /{path=**} {
            // Allow full access to subcollections if the user can 'get' the parent room.
            allow read, write: if get(/databases/$(database)/documents/studyRooms/$(roomId)).rules.allow.get;
        }
    }
  }
}
