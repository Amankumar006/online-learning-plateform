rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUserId(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isParticipant(roomId) {
      return isAuth() && request.auth.uid in get(/databases/$(database)/documents/studyRooms/$(roomId)).data.participantIds;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if isUserId(userId) || isAdmin();
      allow create: if isUserId(userId);
      allow update: if isUserId(userId) || isAdmin();
      allow delete: if false; // Nobody can delete user documents
    }

    // Rules for 'lessons', 'announcements', and 'emailQueue' (Admin-only write)
    match /lessons/{lessonId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /announcements/{announcementId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    match /emailQueue/{emailId} {
      allow create: if isAdmin(); // Trigger Email Extension
      allow read, update, delete: if false;
    }
    match /lessonRequests/{requestId} {
        allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if isAdmin();
    }


    // Rules for the 'exercises' collection
    match /exercises/{exerciseId} {
      allow read: if isAuth(); // Allow reading all exercises (public and custom)
      allow create: if (isAdmin() && request.resource.data.isCustom == false) || 
                       (isAuth() && request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
      allow delete: if isAdmin() || 
                       (isAuth() && get(/databases/$(database)/documents/exercises/$(exerciseId)).data.userId == request.auth.uid);
    }
    
    // Rules for user's responses to exercises
    match /exerciseResponses/{responseId} {
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAuth() && request.resource.data.userId == request.auth.uid;
    }

    // --- Study Rooms ---
    match /studyRooms/{roomId} {
      // LIST: Allow users to query for public rooms OR rooms they are a participant in.
      // This is the key fix for the "insufficient permissions" error on the listing page.
      allow list: if isAuth() && (request.query.resource.data.isPublic == true || request.auth.uid in request.query.resource.data.participantIds);
      
      // GET: Allow a user to read a specific room document if it's public or they are a participant.
      allow get: if isAuth() && (resource.data.isPublic == true || request.auth.uid in resource.data.participantIds);

      allow create: if isAuth() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isAuth() && resource.data.ownerId == request.auth.uid; // Only owner can update (e.g. end session, update state)
      allow delete: if false; // Don't allow deletion, sessions should expire or be ended.

      // Subcollections
      match /participants/{userId} {
        allow read: if isParticipant(roomId);
        allow write: if isUserId(userId);
        allow delete: if isUserId(userId);
      }

      match /messages/{messageId} {
        allow read: if isParticipant(roomId);
        allow create: if isParticipant(roomId) && isUserId(request.resource.data.userId);
        allow update, delete: if false;
      }
      
      match /resources/{resourceId} {
          allow read: if isParticipant(roomId);
          allow create: if isParticipant(roomId) && isUserId(request.resource.data.addedByUserId);
          allow delete: if isParticipant(roomId) && (get(/databases/$(database)/documents/studyRooms/$(roomId)/resources/$(resourceId)).data.addedByUserId == request.auth.uid || resource.data.ownerId == request.auth.uid);
          allow update: if false;
      }
    }
  }
}
