
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check if the user document exists and has the 'admin' role.
      // This prevents errors if the user document hasn't been created yet.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    //----------------------------------------------------------------------
    // User Profiles
    //----------------------------------------------------------------------
    match /users/{userId} {
      // Admins can read any profile, users can only read/write their own.
      allow get, write: if isOwner(userId);
      allow list, create: if isOwner(userId) || isAdmin();
    }

    //----------------------------------------------------------------------
    // Lessons
    //----------------------------------------------------------------------
    match /lessons/{lessonId} {
      // Lessons are public to all signed-in users.
      allow read: if isSignedIn();
      // Only admins can create, update, or delete lessons.
      allow write: if isAdmin();
    }

    //----------------------------------------------------------------------
    // Exercises
    //----------------------------------------------------------------------
    match /exercises/{exerciseId} {
      // Allow getting any single exercise document by ID.
      allow get: if isSignedIn();

      // Allow listing exercises under specific, secure conditions:
      // 1. When fetching public exercises for a lesson.
      // 2. When a user is fetching their own custom-made exercises.
      allow list: if isSignedIn() && (
                    ('lessonId' in request.query.where) ||
                    (request.query.where.userId == request.auth.uid && request.query.where.isCustom == true)
                  );
                  
      // Allow admins to do anything.
      // Allow users to create their own custom exercises.
      allow create: if isAdmin() || 
                     (isSignedIn() && request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid);
      
      // Allow admins to update/delete anything.
      // Allow users to update/delete their own custom exercises.
      allow update, delete: if isAdmin() || 
                             (isSignedIn() && resource.data.isCustom == true && resource.data.userId == request.auth.uid);
    }

    //----------------------------------------------------------------------
    // Exercise Responses
    //----------------------------------------------------------------------
    match /exerciseResponses/{responseId} {
      // Users can read/write their own responses. Admins have full read access.
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin() || (request.query.where.userId == request.auth.uid);
      
      // Users can only create/update/delete their own responses.
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    //----------------------------------------------------------------------
    // Announcements
    //----------------------------------------------------------------------
    match /announcements/{announcementId} {
        // Announcements are public to all signed-in users.
        allow read: if isSignedIn();
        // Only admins can create, update, or delete them.
        allow write: if isAdmin();
    }

    //----------------------------------------------------------------------
    // Lesson Requests
    //----------------------------------------------------------------------
    match /lessonRequests/{requestId} {
      // Users can only create their own requests.
      allow create: if isOwner(request.resource.data.userId);
      // Admins can read/update all requests.
      // Users can only read their own requests (no list).
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin() && 'status' in request.query.where;
      allow update: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // Email Queue
    //----------------------------------------------------------------------
    match /emailQueue/{emailId} {
      // Nobody can read or write to the email queue directly from the client.
      // This must be managed by a trusted server environment (e.g. Cloud Functions, Firebase Extensions).
      allow read, write: if false;
    }
  }
}
