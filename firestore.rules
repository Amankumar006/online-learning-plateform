rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isStudent(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'student';
    }
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId || isAdmin(request.auth.uid);
    }

    // Lessons collection
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin(request.auth.uid);
    }

    // Exercises collection
    match /exercises/{exerciseId} {
      // Any authenticated user can read exercises
      allow read: if request.auth != null;

      // Create is allowed if:
      // 1. User is an admin creating a standard lesson exercise.
      // OR
      // 2. User is authenticated and creating their own custom exercise.
      allow create: if (isAdmin(request.auth.uid) && request.resource.data.isCustom == false) ||
                      (request.auth != null && request.resource.data.userId == request.auth.uid && request.resource.data.isCustom == true);

      // Only admins can update exercises.
      allow update: if isAdmin(request.auth.uid);
      
      // Delete is allowed if:
      // 1. User is an admin.
      // OR
      // 2. User is deleting their own custom exercise.
      allow delete: if isAdmin(request.auth.uid) || 
                      (resource.data.userId == request.auth.uid && resource.data.isCustom == true);
    }

    // Exercise Responses collection
    match /exerciseResponses/{responseId} {
      // A user can only read their own responses.
      allow get: if request.auth.uid == resource.data.userId;
      allow list: if request.query.where.userId == request.auth.uid;
      
      // A user can only create or update their own responses.
      allow create, update: if request.auth.uid == request.resource.data.userId;
    }
  }
}
