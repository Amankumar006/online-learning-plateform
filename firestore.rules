rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to reuse logic and improve readability
    function isAdmin() {
      // Check if the signed-in user has the 'admin' role in their user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isSignedIn() {
      // Check if the user is authenticated.
      return request.auth != null;
    }
    
    function isOwner(userId) {
      // Check if the signed-in user's ID matches the provided userId.
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read any user profile, regular users can only read their own.
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Users can update their own profile (e.g., name). Admins can also update any user profile (e.g., for role changes).
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Disallow client-side creation or deletion of user documents for security. This should be handled by a trusted backend.
      allow create, delete: if false;
    }
    
    // Rules for the 'lessons' collection
    match /lessons/{lessonId} {
      // Any signed-in user can read lessons.
      allow read: if isSignedIn();
      // Only admins can create, update, or delete lessons.
      allow write: if isSignedIn() && isAdmin();
    }
    
    // Rules for the 'exercises' collection
    match /exercises/{exerciseId} {
      // Any signed-in user can read any exercise.
      allow read: if isSignedIn();

      // Allow users to create their own custom exercises. Admins can create any exercise.
      allow create: if isSignedIn() && 
                    ((request.resource.data.isCustom == true && isOwner(request.resource.data.userId)) || isAdmin());
      
      // Allow users to update/delete their own custom exercises. Admins can update/delete any exercise.
      allow update, delete: if isSignedIn() && 
                           ((resource.data.isCustom == true && isOwner(resource.data.userId)) || isAdmin());
    }

    // Rules for 'exerciseResponses' collection
    match /exerciseResponses/{responseId} {
      // Users can create and read their own responses.
      // The response ID is formatted as `userId_exerciseId`.
      allow read, create, update: if isSignedIn() && isOwner(request.resource.data.userId);
      // Prevent users from deleting their past responses.
      allow delete: if false;
    }
    
    // Rules for 'lessonRequests' collection
    match /lessonRequests/{requestId} {
      // Admins can read all requests. Users can only read requests they created.
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      // Users can create their own requests.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      // Only admins can update requests (e.g., to approve them).
      allow update: if isSignedIn() && isAdmin();
      // Prevent requests from being deleted via the client.
      allow delete: if false;
    }
    
    // Rules for the 'announcements' collection
    match /announcements/{announcementId} {
      // Any signed-in user can read announcements.
      allow read: if isSignedIn();
      // Only admins can create, update, or delete announcements.
      allow write: if isSignedIn() && isAdmin();
    }

    // Rules for the 'emailQueue' collection
    match /emailQueue/{emailId} {
      // No direct client access. This collection is managed by backend processes or extensions.
      allow read, write: if false;
    }
  }
}
