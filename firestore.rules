
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can read their own data, admins can read all.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Lessons: All authenticated users can read. Admins can do anything.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Exercises: Read for all authenticated.
    // Custom exercises can be created/managed by owner or admin.
    match /exercises/{exerciseId} {
      allow read: if request.auth != null && (get(/databases/$(database)/documents/exercises/$(exerciseId)).data.isCustom == false || get(/databases/$(database)/documents/exercises/$(exerciseId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                    || (request.resource.data.isCustom == true && request.resource.data.userId == request.auth.uid);
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                          || (get(/databases/$(database)/documents/exercises/$(exerciseId)).data.userId == request.auth.uid && get(/databases/$(database)/documents/exercises/$(exerciseId)).data.isCustom == true);
    }
    
    // Exercise Responses: Users can manage their own responses. Admins can read all.
    match /exerciseResponses/{responseId} {
      // responseId is formatted as "{userId}_{exerciseId}"
      allow read: if request.auth.uid == responseId.split('_')[0] 
                   || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // A user can create/update/delete their own response.
      allow write: if request.auth.uid == responseId.split('_')[0];
    }

    // Announcements: All can read, only admins can create.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Email Queue: Only for the Trigger Email extension. No client access.
    match /emailQueue/{emailId} {
      allow read, write: if false;
    }
    
    // Lesson Requests: Users can create, admins can manage.
    match /lessonRequests/{requestId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
